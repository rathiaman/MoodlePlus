<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Courses"
    android:id="@+id/drawer_layout"
    android:background="#FF6A00">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/fragmentholder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="course_name"
            android:textSize="25sp"
            android:id="@+id/course_name"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="course_decription"
            android:textSize="20sp"
            android:id="@+id/course_decription"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/course_name"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CREDITS: "
            android:textSize="20sp"
            android:id="@+id/Credits_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/course_decription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="course_credits"
            android:textSize="20sp"
            android:id="@+id/course_credits"
            android:layout_alignTop="@+id/Credits_text"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="L - T - P"
            android:textSize="20sp"
            android:id="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Credits_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="course_ltp"
            android:textSize="20sp"
            android:id="@+id/course_ltp"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/course_credits"
            android:layout_alignStart="@+id/course_credits"
            android:textColor="#000000"
            android:textStyle="italic" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Assignments"
            android:id="@+id/assignment_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/textView7"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:background="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Threads"
            android:id="@+id/thread_button"
            android:layout_below="@+id/assignment_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:background="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Grades"
            android:id="@+id/grade_button"
            android:layout_below="@+id/thread_button"
            android:layout_centerHorizontal="true"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:background="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:background="#dedede"
        android:layout_height="match_parent"
        android:id="@+id/drawerList"
        android:layout_gravity="start">


    </ListView>

</android.support.v4.widget.DrawerLayout>
